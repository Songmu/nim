#!/usr/bin/env perl

use strict;
use warnings;
use FindBin::libs;

use Pod::Usage;
use Getopt::Long;

use Nim;

GetOptions(
    \my %options,
    qw/help flavour=s debug/
);
pod2usage(0) if $options{help};

my $nim = Nim->new;
$nim->run;

__END__

=head1 NAME

nim - minimal command-line based contents generator

=head1 SYNOPSIS

    nim [options]

